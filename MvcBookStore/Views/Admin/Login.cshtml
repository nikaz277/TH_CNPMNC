
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <meta charset="utf-8">
    <title>Daily UI - Day 1 Sign In</title>
    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700|Lato:400,100,300,700,900' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/animate.css">
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="top">
            <h1 id="title" class="hidden"><span id="logo">Daily <span>UI</span></span></h1>
        </div>
        <div class="login-box animated fadeInUp">
            <div class="box-header">
                <div id="login">

                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <form name='form-login'>
                            <h2>Log In</h2>
                            <h3 style="color:red;text-align:center">@ViewBag.Thongbao</h3>
                            <span class="fontawesome-user"></span>
                            <input type="text" name="UserAdmin" placeholder="Username"><h3 style="color:red">@ViewData["Loi1"]</h3>
                            <span class="fontawesome-lock"></span>
                            <input type="password" name="PassAdmin" placeholder="Password"><h3 style="color:red">@ViewData["Loi2"]</h3>

                            <button type="submit">Sign In</button>
                            <br />
                        
                        </form>
                    }
                </div>
        </div>
    </div>
</body>
<script>
	$(document).ready(function () {
    	$('#logo').addClass('animated fadeInDown');
    	$("input:text:visible:first").focus();
	});
	$('#username').focus(function() {
		$('label[for="username"]').addClass('selected');
	});
	$('#username').blur(function() {
		$('label[for="username"]').removeClass('selected');
	});
	$('#password').focus(function() {
		$('label[for="password"]').addClass('selected');
	});
	$('#password').blur(function() {
		$('label[for="password"]').removeClass('selected');
	});
</script>

</html>
